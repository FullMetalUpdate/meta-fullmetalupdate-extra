# short-description: Create STM32MP1 card image
# long-description: Creates a partitioned SD card image for use with
# Boot files are located in the first ext4 partition.

part tf1 --source rawcopy --sourceparams="file=tf-a-stm32mp157c-ev1-trusted.stm32" --ondisk mmcblk --align 17
part tf2 --source rawcopy --sourceparams="file=tf-a-stm32mp157c-ev1-trusted.stm32" --ondisk mmcblk --align 273
part u-boot1 --source rawcopy --sourceparams="file=u-boot-stm32mp157c-ev1-trusted.stm32" --ondisk mmcblk --align 529

part /bootfs --source bootimg-partition --ondisk mmcblk --fstype=ext4 --label bootfs --active --align 8192 --size 16
part / --source rootfs --ondisk mmcblk --fstype=ext4 --label rootfs --align 4096

bootloader --ptable gpt
